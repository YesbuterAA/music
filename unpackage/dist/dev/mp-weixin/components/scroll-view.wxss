scroll-view::-webkit-scrollbar {
  display: none;
  width: 0 !important;
  height: 0 !important;
  -webkit-appearance: none;
  background: transparent;
}
.scroll-view_H {
  white-space: nowrap;
  width: 100%;
}
.scroll-view-item {
  text-align: center;
  font-size: 20rpx;
}
.scroll-view-item_H {
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  padding-left: 30rpx;
}
.Featured_wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100%;
  padding-bottom: 20rpx;
}
.Featured_wrap .Featured_header {
  width: 150rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.Featured_wrap .Featured_header image {
  width: 100%;
  -webkit-border-radius: 15rpx;
          border-radius: 15rpx;
}
.Featured_wrap .Featured_body {
  -webkit-box-flex: 5;
  -webkit-flex: 5;
          flex: 5;
  border-bottom: 1rpx solid #ccc;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-left: 20rpx;
}
.Featured_wrap .Featured_body .Featured_name .text_name {
  font-size: 36rpx;
  font-weight: 600;
  color: #404042;
}
.Featured_wrap .Featured_body .Featured_name .text_author {
  font-size: 25rpx;
  color: #ADADAD;
}
.Featured_wrap:nth-child(3) .Featured_body {
  border-bottom: none !important;
}

