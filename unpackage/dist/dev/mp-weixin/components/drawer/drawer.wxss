.login_avarat {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 200rpx;
}
.login_avarat text {
  display: block;
  margin: auto 0;
  padding-left: 30rpx;
  font-size: 40rpx;
  font-weight: 800;
}
.iconfont {
  color: #888;
  padding: 10rpx;
}
.card_box1 {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.card_text {
  font-size: 30rpx;
  font-weight: 400;
  padding: 30rpx;
}
.card_text text:nth-child(1) {
  padding-left: 10rpx;
}
.card_box1 .card_text:nth-child(1) {
  border-bottom: 1rpx solid #F1F1F1;
}
.card_box1 .card_text text:nth-child(3) {
  float: right;
}

